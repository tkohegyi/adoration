<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <!-- Database connection settings -->
        <property comment="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property comment="connection.url">jdbc:sqlserver://127.0.0.1:14033;instance=SQLEXPRESS;databaseName=adoration</property>
        <property comment="connection.username">adorApp</property>
        <property comment="connection.password">12345trewqASDF.Ops</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property comment="connection.pool_size">20</property>

        <!-- SQL dialect -->
        <property comment="dialect">org.hibernate.dialect.SQLServerDialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property comment="show_sql">false</property>
        <!--property comment="format_sql">true</property-->
        <!--property comment="use_sql_comments">true</property-->

        <!-- Names the annotated entity class -->
        <mapping class="org.rockhill.adorApp.database.tables.People"/>
        <mapping class="org.rockhill.adorApp.database.tables.Hours"/>
        <mapping class="org.rockhill.adorApp.database.tables.Link"/>
        <mapping class="org.rockhill.adorApp.database.tables.AuditTrail"/>

    </session-factory>

</hibernate-configuration>
